@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">

                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/image/site/user.png"
                                     alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@Model.AdminName @Model.AdminSurmane</h3>

                            <p class="text-muted text-center">@(Model.AdminAuthorization ? "Üst Düzey Admin" : "Admin")</p>

                            <ul class="list-group list-group-unbordered mb-3">

                                <li class="list-group-item">
                                    <b>İmzalama Yetkisi</b> <a class="float-right">@(Model.AdminAuthorization ? "Var" : "Yok")</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Kayıtlı İmza</b>
                                    @if (Model.AdminAuthorization)
                                    {
                                        <img class="profile-user-img float-right "
                                             src="@Model.AdminSignatureImage"
                                             alt="User profile picture">
                                    }
                                    else
                                    {
                                <a class="float-right">Yok</a>
                                    }

                                </li>
                            </ul>

                        </div>
                        <!-- /.card-body -->
                    </div>

                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#settings"   data-toggle="tab">Bilgiler</a></li>
                                <li class="nav-item"><a class="nav-link " href="#activity" data-toggle="tab">Aktiviteler</a></li>
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">

                                <!-- AYARLAR -->
                                <div class="tab-pane active" id="settings">

                                    @using (Html.BeginForm("AdminProfile", "Admin", FormMethod.Post, new { @class = "form-horizontal", autocomplete = "off" }))
                                    {
                                        @Html.HiddenFor(x => x.AdminID) @*form içinde AdminID bilgisi olmadan güncelleme yapılamıyor, buraya gizli olarak ekledik*@

                                        <div class="form-group row">
                                            <label for="inputName" class="col-sm-2 col-form-label">İsim</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.AdminName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.AdminName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputName2" class="col-sm-2 col-form-label">Soy İsim</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.AdminSurmane, new { @class = "form-control", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(x => x.AdminSurmane, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail" class="col-sm-2 col-form-label">Mail</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.AdminMail, new { @class = "form-control", @readonly = "readonly" })
                                                @Html.ValidationMessageFor(x => x.AdminMail, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputSkills" class="col-sm-2 col-form-label">İş</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.AdminJob, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.AdminJob, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="inputEmail" class="col-sm-2 col-form-label">Şifre</label>
                                            <div class="col-sm-10">
                                                @Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(x => x.AdminPassword, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <div class="offset-sm-2 col-sm-10">
                                                <button type="submit" class="btn btn-danger">Bilgileri Güncelle</button>
                                                <br />
                                                @if (ViewBag.RecordStatus != null)
                                                {
                                                    if (ViewBag.RecordStatus)
                                                    {
                                                        <p class="text-success">@ViewBag.ErrorMessage</p>
                                                    }
                                                    else
                                                    {
                                                        <p class="text-danger">@ViewBag.ErrorMessage</p>
                                                    }
                                                }
                                                else
                                                {
                                                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                                                }
                                            </div>
                                        </div>
                                        <br />

                                    }


                                </div>
                                <!-- AYARLAR -->
                                <div class="tab-pane" id="activity">
                                    <p>Bu özellik kullanıma açılmamlıştır</p>
                                </div>


                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

